<?page title="Home" contentType="text/html;charset=UTF-8"?>
<?link rel="stylesheet" type="text/css"	href="/bootstrap/css/bootstrap.css" ?>
<?link rel="stylesheet" type="text/css" href="/css/index.css.dsp" ?>
<?link rel="stylesheet" type="text/css"
	href="/css/user-nav.css.dsp" ?>
<?link rel="stylesheet" type="text/css"
	href="/css/sidebar.css.dsp" ?>
<?link rel="stylesheet" type="text/css"
	href="/css/search.css.dsp" ?>
<?link rel="stylesheet" type="text/css"
	href="/css/content-header.css.dsp" ?>
<?link id="theme" rel="stylesheet" type="text/css"
	href="/css/grey.css.dsp"?>

<zk xmlns:n="native">

	<div sclass="header">
		<n:h1>
			<a>BTS</a>
		</n:h1>
	</div>

	<div sclass="user-nav">
		<menubar>
			<menuitem iconSclass="icon icon-white icon-user"
				label="Profile" />
			<menu iconSclass="icon icon-white icon-envelope"
				label="Messages">
				<menupopup sclass="navpp">
					<menuitem label="new message" />
					<menuitem label="inbox" />
					<menuitem label="outbox" />
					<menuitem label="trash" />
				</menupopup>
			</menu>
			<menuitem iconSclass="icon icon-white icon-cog"
				label="Settings" />
			<menuitem iconSclass="icon icon-white icon-share-alt"
				label="Logout" onClick="logout()" />
		</menubar>
	</div>

	<navbar orient="vertical" sclass="sidebar">
		<navitem iconSclass="icon icon-white icon-home"
			label="Dashboard" selected="true" href="admin_home.zul" />
		<nav iconSclass="icon icon-white icon-th-list" label="User">
			<navitem label="View Users" href="view_user.zul" />
		</nav>
		<nav iconSclass="icon icon-white icon-th-list"
			label="Project">
			<navitem label="Create Project" href="create_proj.zul" />
			<navitem label="Assign Project" href="assign_proj.zul" />
			<navitem label="View Projects" href="view_proj.zul" />
		</nav>
		<nav iconSclass="icon icon-white icon-th-list" label="Bug">
			<navitem label="View Bug Report" href="bug_report.zul" />
		</nav>
	</navbar>

	<div sclass="content">
		<div sclass="content-header">
			<div id="welcome" onCreate="getUser()">
				<zscript><![CDATA[
	void getUser() {
		try {
			String unm = String.valueOf(Sessions.getCurrent().getAttribute(
					"user"));
			user.setValue(unm);
		} catch (Exception e) {
			Executions.sendRedirect("../login.zul");
		}
	}
	void logout() {
		try {
			Sessions.getCurrent().invalidate();
			Executions.sendRedirect("../login.zul");
		} catch (Exception e) {
		}
	}
]]>
			</zscript>
				<n:h1>
					Welcome
					<label id="user" style="font-size:28px;"></label>
				</n:h1>
			</div>
		</div>
		<div sclass="breadcrumb">
			<a href="#" tooltip="btntip,after_center"
				iconSclass="icon-home">
				Home
				<custom-attributes title="Go to Home" />
			</a>
			<a href="#">Dashboard</a>
		</div>
		<!-- <include src="" /> include respective .zul files here -->
		<vlayout xmlns:n="native" style="padding: 20px">
			<div class="row-fluid">
				<div class="center">
					<div align="center"
						apply="projectManager.FilterViewModel"
						viewModel="@id('vm') @init('projectManager.FilterViewModel')">
							<grid>
								<rows>
									<row>
										Select Project:
											<combobox id="proj"	autodrop="true" model="@load(vm.projectModel)" constraint="no empty:Please Select Project" selectedItem="@bind(vm.pobj)">
												<template name="model">
												<comboitem label="@load(each.name)" value="@load(each.name)"></comboitem>
												</template>
											</combobox>
									</row>
									<row>
										Select Developers:
										<listbox
											model="@load(vm.developerModel)">
											<template name="model"
												var="dev">
												<listitem>
													<listcell>
														<checkbox
															label="@{ load(dev.name)}"
															checked="@{ bind(dev.checked)}" />
													</listcell>
												</listitem>
											</template>
										</listbox>
									</row>
									<row>
										Select Testers:
										<listbox
											model="@load(vm.testerModel)" checkmark="false">
											<template name="model">
												<listitem>
													<listcell>
														<checkbox
															label="@load(each.name)">
														</checkbox>
													</listcell>
												</listitem>
											</template>
										</listbox>
									</row>
									<row>
										<label></label>
										<button label="Assign"
											onClick="@command('checkDev')">
										</button>
									</row>
								</rows>
							</grid>
					</div>
				</div>
			</div>
		</vlayout>
	</div>
</zk>